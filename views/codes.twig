{% extends 'admin.base' %}

{% block title %}{{ trans('InvitationCodes::admin.title') }}{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <div class="card card-success">
        <div class="card-header">
          <h3 class="card-title">{{ trans('InvitationCodes::admin.available.title') }}</h3>
        </div>
        <div class="card-body p-0">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>{{ trans('InvitationCodes::general.code') }}</th>
                <th>{{ trans('InvitationCodes::admin.generated_at') }}</th>
                <th>{{ trans('InvitationCodes::admin.description') }}</th>
              </tr>
            </thead>
            <tbody>
              {% for item in free %}
                <tr>
                  <td>{{ item.code }}</td>
                  <td>{{ item.generated_at }}</td>
                  <td>
                    <div class="input-group">
                      <input
                        type="text"
                        class="form-control"
                        id="description-{{ item.id }}"
                        value="{{ item.description }}" 
                      />
                      <div class="input-group-append">
                        <button class="btn btn-info" onclick="editDescription({{ item.id }}, this)"><i class="fa fa-edit"></i></button>
                      </div>
                    </div>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="2">{{ trans('InvitationCodes::admin.available.empty') }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
        <div class="card-footer">
          <form method="post" action="{{ url('/admin/invitation-codes/generate') }}">
            {{ csrf_field() }}
            <div class="input-group mb-2">
              <input
                type="text"
                class="form-control"
                name="description"
                style="width: 50%;"
                placeholder="{{ trans('InvitationCodes::admin.description') }}"
              />
            </div>
            {% if errors.any() %}
              <div class="alert alert-danger">{{ errors.first() }}</div>
            {% endif %}
            <button type="submit" class="btn btn-primary">
              {{ trans('InvitationCodes::admin.title') }}
            </button>
          </form>
        </div>
      </div>
    </div>
    
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">{{ trans('InvitationCodes::admin.used.title') }}</h3>
        </div>
        <div class="card-body p-0">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>{{ trans('InvitationCodes::general.code') }}</th>
                <th>{{ trans('InvitationCodes::admin.generated_at') }}</th>
                <th>{{ trans('InvitationCodes::admin.used.user_id') }}</th>
                <th>{{ trans('InvitationCodes::admin.used.used_at') }}</th>
                <th>{{ trans('InvitationCodes::admin.description') }}</th>
              </tr>
            </thead>
            <tbody>
              {% for item in used %}
                <tr>
                  <td>{{ item.code }}</td>
                  <td>{{ item.generated_at }}</td>
                  <td>{{ item.used_by }}</td>
                  <td>{{ item.used_at }}</td>
                  <td>
                    <div class="input-group">
                      <input
                        type="text"
                        class="form-control"
                        id="description-{{ item.id }}"
                        value="{{ item.description }}" 
                      />
                      <div class="input-group-append">
                        <button class="btn btn-info" onclick="editDescription({{ item.id }}, this)"><i class="fa fa-edit"></i></button>
                      </div>
                    </div>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="4">{{ trans('InvitationCodes::admin.used.empty') }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<script>
  function editDescription(id, button) {
    let content = document.getElementById("description-" + id).value;
    blessing.fetch.put("/admin/invitation-codes", {"id" : id, "description" : content}).then((response) => {
      if (response.success) {
        button.classList.replace("btn-info", "btn-success");
        button.innerHTML = '<i class="fa fa-check"></i>';
      }
    });
  }
</script>
{% endblock %}
